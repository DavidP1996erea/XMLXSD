<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:annotation>
        <xs:documentation xml:lang="en">
            Este Schema muestra los datos de ciertos alumnos
        </xs:documentation>
    </xs:annotation>


    <xs:element name="Colegio">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="DatosAlumnos" maxOccurs="unbounded">

                    <xs:complexType>
                        <xs:sequence>
                            <xs:element ref="nombre">
                                <xs:annotation>
                                    <xs:documentation xml:lang="en">
                                        Este atributo pertenece al nombre del alumno.
                                    </xs:documentation>
                                </xs:annotation>
                            </xs:element>
                            <xs:element ref="apellidos"/>
                            <xs:element ref="edad"/>
                            <xs:choice>
                                <xs:element ref="Repetidor" />
                                <xs:element ref="NoRepetidor" />
                            </xs:choice>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>


    <xs:element name="nombre" type="nombreRestri"/>
    <xs:element name="apellidos" type="xs:string"/>
    <xs:element name="edad" type="edadRestri"/>
    <xs:element name="Repetidor" fixed="" />
    <xs:element name="NoRepetidor" fixed="" />

    <xs:simpleType name="edadRestri">
        <xs:restriction base="xs:integer">
            <xs:minInclusive value="1"/>
            <xs:maxInclusive value="99"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="nombreRestri">
        <xs:restriction base="xs:string">
            <xs:enumeration value="David"/>
            <xs:enumeration value="Ruben"/>
            <xs:enumeration value="Ale"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>